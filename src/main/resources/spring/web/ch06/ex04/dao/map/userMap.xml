<?xml version='1.0' encoding='utf-8' ?>
<!DOCTYPE mapper PUBLIC '-//mybatis.org//DTD Mapper 3.0//EN'
	'http://mybatis.org/dtd/mybatis-3-mapper.dtd'>
<mapper namespace='spring.web.ch06.ex04.dao.map.UserMap'>
	<select id='selectUsers' resultType='ch06.ex04.user'>
		select user_id userId, user_name userName, birthday
		from users
	</select>
	
	<insert id='insertUser'>
		insert into users
		values (#{userId}, #{userName}, #{birthday})
	</insert>
	
	<update id='updateUser'>
		update users
		set user_name = #{userName}, birthday = #{birthday}
		where user_id = #{userId}
	</update>
	
	<delete id='deleteUser'>
		delete users
		where user_id = #{userId}
	</delete>
</mapper>
